{
    "name": "My Extension",
    "description": "Copies text",
    "version": "0.1",
    "manifest_version": 2,
    "icons": {
      "16": "/fake_news_colour_192.png"
    },
    "background": {
      "scripts": [
        "./background.js"
      ]
    },
    "options_page": "./options.html",
    "browser_action": {
      "default_title": "My Extension",
      "default_popup": "./popup.html",
      "default_icon": "./fake_news_colour_192.png"
    },
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js; object-src 'self'",
    "permissions": [
      "tabs",
      "<all_urls>",
      "storage",
      "contextMenus",
      "activeTab"
    ]
  }